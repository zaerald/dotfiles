[user]
  name = zaerald
  email = zaerald.zd@gmail.com

[core]
  editor = "$(which nvim)"

[alias]
  a = add
  aa = add .
  cm = commit -m
  s = status -s
  st = status
  dino = diff --name-only
  co = checkout
  cb = checkout -b
  br = branch
  brn = branch --show-current
  brb = branch --show-branch
  hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
  l = log --pretty=oneline -n 20 --graph --abbrev-commit
  lo = log --oneline
  ca = commit --amend
  can = commit --amend --no-edit
  p = push
  pf = push -f
  pfl = push --force-with-lease
  pu = push -u origin HEAD
  pl = pull
  rhh = reset --hard HEAD
  t = tag
  ts = tag -l
  sq = "!f() { git reset HEAD~$1; }; f"
  sqb = "!f() { git reset HEAD~$(git rev-list --count $1..HEAD); }; f"
  rlc = "!f() { git rev-list --count $1..HEAD; }; f"
  count = "!f() { git rev-list --count $1..HEAD; }; f"
  contributors = shortlog --summary --numbered
  whoami = config user.email

  # list aliases
  aliases = config --get-regexp alias

[pull]
  ff = only

[init]
  defaultBranch = main

