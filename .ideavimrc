set encoding=utf-8
scriptencoding utf-8
let mapleader=" "

source ~/.config/nvim/plugin/sets.vim
source ~/.config/nvim/plugin/zmap.vim

" -- intellij only config --
set NERDTree
set ideajoin
set idearefactormode=keep
set clipboard+=ideaput
set visualbell
set surround
" status intellij
set showmode

" -- intellij mappings --
nnoremap <leader>si :source ~/.ideavimrc<CR>

" see :actionlist
map ,rr <Action>(Run)
map ,rc <Action>(ContextRun)
map ,ry <Action>(ChooseRunConfiguration)
map ,rd <Action>(Debug)
map ,rs <Action>(Stop)
map ,rg <Action>(ContextDebug)
map ,b <Action>(ToggleLineBreakpoint)

map ,xf <Action>(ToggleDistractionFreeMode)
map ,xx <Action>(HideAllWindows)<bar> <Action>(ActivateProjectToolWindow)
map ,xc <Action>(HideAllWindows)<bar> <Action>(SelectInProjectView)

map ,aa <Action>(GotoAction)
map ,ae <Action>(SearchEverywhere)
map ,ap <Action>(FindInPath)
map ,ac <Action>(GotoClass)
map ,af <Action>(GotoFile)
map ,as <Action>(GotoSymbol)
map ,hh <Action>(TypeHierarchy)
map ,hm <Action>(MethodHierarchy)
map ,hc <Action>(CallHierarchy)
map ,o <Action>(OverrideMethods)
map ,m <Action>(FileStructurePopup)
map ,s <Action>(SelectInProjectView)

map ,wr <Action>(ActivateRunToolWindow)
map ,wd <Action>(ActivateDebugToolWindow)
map ,wb <Action>(ActivateBuildToolWindow)
map ,we <Action>(ActivateEventLogToolWindow)
map ,wm <Action>(ActivateProblemsViewToolWindow)
map ,wt <Action>(ActivateTerminalToolWindow)
map ,wo <Action>(Terminal.OpenInTerminal)
map ,wp <Action>(JumpToLastWindow)

map ge <Action>(GotoNextError)
map gE <Action>(GotoPreviousError)
map gi <Action>(GotoImap)
map gd <Action>(GotoDeclaration)
map gp <Action>(GotoSuperMethod)
map gt <Action>(GotoTest)

map <leader>tt <Action>(Refactorings.QuickListPopupAction)

map <s-TAB> <Action>(PreviousTab)
map <TAB> <Action>(NextTab)

map <Leader>en <Action>(EditSourceInNewWindow)
map <Leader>n <Action>(NextWindow)
map <Leader>N <Action>(PreviousWindow)

map [[ <Action>(MethodUp)
map ]] <Action>(MethodDown)

map zc <Action>(CollapseRegion)
map zo <Action>(ExpandRegion)
map <leader>zc <Action>(CollapseAllRegions)
map <leader>zo <Action>(ExpandAllRegions)
